---
import ArrowTop from "@icons/Top.astro";
---

<div
  class="toTop fixed opacity-0 cursor-pointer flex items-center justify-center bottom-4 right-4 rounded-full size-12 border border-white bg-white dark:bg-neutral-900/90 dark:border-neutral-500/20 shadow-[0_3px_10px_rgb(0,0,0,0.2)] group hover:bg-neutral-900/90 hover:text-white hover:border-neutral-500/20 dark:hover:bg-white dark:hover:text-neutral-900/90 dark transition"
  title="ToTopButton"
  id="toTop"
>
  <ArrowTop class="size-8" />
</div>

<style>
  .toTop {
    animation: shown-top 1s linear both;
    animation-timeline: scroll();
    animation-range: 0 100px;
  }

  @keyframes shown-top {
    to {
      @apply opacity-100;
    }
  }
</style>

<script>
  const toTop = document.getElementById("toTop");
  if (toTop) {
    toTop.addEventListener("click", () => {
      window.scrollTo({
        top: 0,
        behavior: "smooth",
      });
    });
  }
</script>
